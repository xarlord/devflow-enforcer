{
  "name": "@xarlord/devflow-enforcer",
  "version": "2.0.0",
  "description": "Context-optimized workflow enforcement plugin for Claude Code - ~78% token savings with 14-phase quality gates",
  "keywords": [
    "claude-code",
    "claude",
    "plugin",
    "workflow",
    "devops",
    "sdlc",
    "quality-gates",
    "testing",
    "code-review",
    "context-optimization",
    "software-development-lifecycle"
  ],
  "license": "MIT",
  "author": {
    "name": "Sefa Ocakli",
    "email": "sefa.ocakli@daiichi.local",
    "url": "https://github.com/xarlord"
  },
  "contributors": [
    {
      "name": "Claude (Anthropic)",
      "email": "noreply@anthropic.com"
    }
  ],
  "claude": {
    "minVersion": "1.0",
    "requires": [],
    "provides": {
      "workflow": "Enforces 14-phase software development process",
      "agents": "15 specialized agents for different development tasks",
      "documentation": "Auto-generated documentation and summaries"
    },
    "marketplace": {
      "source": "https://github.com/xarlord/devflow-enforcer.git",
      "packageName": "@xarlord/devflow-enforcer"
    }
  },
  "manifests": {
    "main": "index.js",
    "hooks": {},
    "worker": [],
    "assets": [],
    "styles": []
  },
  "settings": {
    "activation": "automatic",
    "contextThreshold": 80,
    "qualityRequirements": {
      "coverageThreshold": 95,
      "passRateThreshold": 100
    }
  },
  "installation": {
    "method": "git-clone",
    "source": "https://github.com/xarlord/devflow-enforcer.git"
  },
  "documentation": {
    "readme": "README.md",
    "changelog": "docs/changes.md",
    "examples": "docs/examples/",
    "api": "docs/api.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xarlord/devflow-enforcer",
    "issues": "https://github.com/xarlord/devflow-enforcer/issues"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "tiktoken": "^1.0.10",
    "zod": "^3.22.0"
  }
}
