{
  "apiVersion": "2024-11-05",
  "name": "DevFlow Enforcer",
  "description": "Context-optimized workflow enforcement plugin - ~78% token savings with 14-phase quality gates, UI/UX, Android, and enhanced testing support",
  "version": "2.1.0",
  "publisher": "Sefa Ocakli",
  "license": "MIT",
  "type": "workflow-enforcement",
  "categories": ["workflow", "devops", "quality", "ui-ux", "mobile", "testing"],
  "capabilities": {
    "workflowEnforcement": {
      "phases": 15,
      "qualityGates": true,
      "metrics": ["95% coverage", "100% pass rate", "100% WCAG 2.1 AA"],
      "enhancements": {
        "lessonsEnforcement": true,
        "postReviewLinting": true,
        "proactiveContextManagement": true
      }
    },
    "contextOptimization": {
      "savingsPercentage": 78,
      "strategies": ["selective-agent-loading", "structured-output", "documentation-summarization", "context-pruning", "jit-workflow-loading", "proactive-checkpoint"],
      "thresholds": {
        "warningLevel": 70,
        "checkpointLevel": 70,
        "clearLevel": 60,
        "reconstructLevel": 50
      }
    },
    "agentSystem": {
      "totalAgents": 25,
      "specializedAgents": ["project-lead", "architect", "qa", "testing", "security", "git-expert", "retrospective"],
      "codingAgents": ["typescript", "python", "java", "cpp", "rust", "csharp"],
      "infrastructureAgents": ["docker", "database"],
      "uiUxAgents": ["ui-ux-designer", "accessibility-expert", "frontend-developer"],
      "mobileAgents": ["android-developer", "android-architect"],
      "testingAgents": ["ui-testing-agent", "visual-regression-agent"],
      "specificationAgents": ["spec-linking-agent"]
    },
    "testingSupport": {
      "unit": ["jest", "vitest", "pytest", "junit", "xctest"],
      "e2e": ["cypress", "playwright", "appium"],
      "visual": ["percy", "chromatic"],
      "mutation": ["stryker"],
      "mobile": ["espresso", "instrumentation"]
    },
    "accessibilitySupport": {
      "standards": ["WCAG 2.1 AA"],
      "tools": ["axe-core", "lighthouse", "wave"],
      "enforcement": "mandatory"
    }
  },
  "manifests": {
    "main": "index.js",
    "hooks": {},
    "worker": [],
    "assets": [],
    "styles": []
  },
  "settings": {
    "activation": "automatic",
    "contextThreshold": 70,
    "qualityRequirements": {
      "coverageThreshold": 95,
      "passRateThreshold": 100,
      "accessibilityThreshold": 100,
      "lintThreshold": 0
    }
  },
  "claude": {
    "minVersion": "1.0",
    "requires": [],
    "provides": {
      "workflow": "Enforces 15-phase software development process with lessons learned enforcement",
      "agents": "25 specialized agents for different development tasks including UI/UX, Android, testing, and specification",
      "documentation": "Auto-generated documentation and summaries",
      "contextManagement": "Proactive context management with checkpointing at 70% threshold",
      "specTraceability": "Requirement-to-test traceability and coverage mapping"
    }
  },
  "installation": {
    "method": "manual-git-clone",
    "sourceDirectory": "devflow-enforcer",
    "instructions": {
      "clone": "git clone https://github.com/xarlord/devflow-enforcer.git",
      "pluginsTarget": ".claude/plugins/",
      "restartRequired": true
    }
  },
  "documentation": {
      "readme": "README.md",
      "changelog": "docs/changes.md",
      "examples": "docs/examples/",
      "api": "docs/api.md"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xarlord/devflow-enforcer",
    "issues": "https://github.com/xarlord/devflow-enforcer/issues"
  },
  "keywords": [
    "claude-code",
    "claude",
    "plugin",
    "workflow",
    "devops",
    "sdlc",
    "quality-gates",
    "testing",
    "code-review",
    "context-optimization",
    "software-development-lifecycle",
    "ui-ux",
    "android",
    "mobile",
    "accessibility",
    "e2e-testing",
    "specification"
  ],
  "author": {
      "name": "Sefa Ocakli",
      "email": "sefa.ocakli@daiichi.local",
      "url": "https://github.com/xarlord"
  },
  "contributors": [
    {
      "name": "Claude (Anthropic)",
      "email": "noreply@anthropic.com"
    }
  ]
}
